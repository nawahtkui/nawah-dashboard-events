import { useEffect, useState } from 'react';

export default function RealTimeFeed() {
  const [events, setEvents] = useState([]);

  useEffect(() => {
    const ws = new WebSocket('ws://localhost:4004');
    ws.onopen = () => console.log('connected to events ws');
    ws.onmessage = (msg) => {
      try {
        const obj = JSON.parse(msg.data);
        if (obj.type === 'recent') setEvents(obj.data);
        if (obj.type === 'new_event') setEvents((s) => [obj.data, ...s].slice(0, 100));
      } catch(e) { console.error('ws parse', e); }
    };
    return () => ws.close();
  }, []);

  return (
    <div className="bg-white p-4 rounded shadow">
      <h2 className="font-semibold mb-2">Real-time Feed</h2>
      <div className="space-y-2 max-h-[60vh] overflow-auto">
        {events.map((ev) => (
          <div key={ev.tx_hash || ev.id} className="p-2 border rounded">
            <div className="text-sm text-gray-600">{ev.event_type} • {new Date(ev.created_at).toLocaleString()}</div>
            <div className="text-sm">From: {ev.sender || '—'}</div>
            <div className="text-sm">To: {ev.receiver || '—'}</div>
            <div className="text-xs text-gray-500">TX: {ev.tx_hash}</div>
          </div>
        ))}
      </div>
    </div>
  );
}
